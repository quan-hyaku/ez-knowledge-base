{
    "name": "weeklify/ez-knowledge-base",
    "description": "A self-contained, configurable knowledge base package for Laravel",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "suggest": {
        "getbrevo/brevo-php": "Required for Brevo inbound email webhook processing (^2.0)"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "EzKnowledgeBase\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EzKnowledgeBase\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "EzKnowledgeBase\\EzKnowledgeBaseServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable"
}
